# Database connection string (PostgreSQL)
# Example: postgresql://user:password@localhost:5432/database_name
DATABASE_URL="postgresql://user:password@localhost:5432/lovable_posting_portal"

# JWT secret key for authentication tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-secret-key-here-32-characters-min"

# Google OAuth Credentials (optional - for SSO)
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# Application URL (for production deployment)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
